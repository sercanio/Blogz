@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul >
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="dropdown">
            <a href="#"><span>@User.Identity?.Name</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
            <ul>
                <li>
                    <div>
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-page-handler="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>
                    </div>
                </li>
                <li><a href="#">Dropdown 3</a></li>
                <li><a href="#">Dropdown 4</a></li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
